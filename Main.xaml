<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Firefly.Wpf.MenuDemo" xmlns:MainMenu="clr-namespace:Firefly.Wpf.MenuDemo" mc:Ignorable="d"
	x:Class="Firefly.Wpf.MenuDemo.Main"
	x:Name="UserControl"
    
    FontFamily="Roboto"
    FontSize="14" d:DesignHeight="480" Width="899.625">
    <UserControl.DataContext>
        <MainMenu:TheMenu/>
    </UserControl.DataContext>
    <Grid x:Name="LayoutRoot" Background="#FFFAFAFA">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="328"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:Menu x:Name="menu" HorizontalAlignment="Left" Margin="0" Grid.RowSpan="2" Width="328">
        
        </local:Menu>
        <Border 
            BorderBrush="white"
            BorderThickness="0,0,1,0"
            CornerRadius="0">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
        </Border>

        <Border Name="backBorder" CornerRadius="0" Margin="10" Grid.Column="1" Grid.RowSpan="2">
            <Border.Effect>
                <BlurEffect/>
            </Border.Effect>
        </Border>
        <StackPanel Grid.Column="1" Margin="20" Background="White">
            <Image x:Name="LogoImage" Height="60" HorizontalAlignment="Left"/>
            <local:MRUList x:Name="mru" />

        </StackPanel>
    </Grid>
</UserControl>